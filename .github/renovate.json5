{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    ":configMigration",
    "helpers:pinGitHubActionDigests",
  ],
  schedule: ["before 9am on monday"],
  timezone: "America/Los_Angeles",
  labels: ["dependencies"],
  prHourlyLimit: 10,
  minimumReleaseAge: "7 days",
  lockFileMaintenance: {
    enabled: true,
    schedule: ["before 9am on monday"],
  },
  "pre-commit": {
    enabled: true,
  },
  customManagers: [
    {
      // Match version comments in YAML: # renovate: datasource=X depName=Y
      customType: "regex",
      managerFilePatterns: ["/^\\.github/workflows/.*\\.ya?ml$/"],
      matchStrings: [
        "#\\s*renovate:\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)\\s*\\n\\s*[\\w-]+:\\s*[\"']?(?<currentValue>[^\"'\\s]+)[\"']?",
      ],
    },
    {
      // Match required-version in pyproject.toml (>=X.Y.Z format)
      customType: "regex",
      managerFilePatterns: ["**/pyproject.toml"],
      matchStrings: [
        "#\\s*renovate:\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)\\s*\\nrequired-version\\s*=\\s*[\"']>=(?<currentValue>[\\d.]+)",
      ],
    },
    {
      // Match uv_build upper bound in pyproject.toml (>=X,<=Y format - captures Y)
      customType: "regex",
      managerFilePatterns: ["**/pyproject.toml"],
      matchStrings: [
        "#\\s*renovate:\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)\\s*\\nrequires\\s*=\\s*\\[\"[^\"]+<=(?<currentValue>[\\d.]+)",
      ],
    },
    {
      // Match zizmor version input in zizmor-action
      customType: "regex",
      managerFilePatterns: ["/^\\.github/workflows/.*\\.ya?ml$/"],
      matchStrings: [
        "uses:\\s*zizmorcore/zizmor-action@[^\\n]+\\n\\s*with:\\s*\\n\\s*version:\\s*v(?<currentValue>[\\d.]+)",
      ],
      depNameTemplate: "zizmorcore/zizmor",
      datasourceTemplate: "github-releases",
      extractVersionTemplate: "^(?<version>.*)$",
    },
  ],
  packageRules: [
    // Group all GitHub Actions updates
    {
      groupName: "GitHub Actions",
      matchManagers: ["github-actions"],
      matchUpdateTypes: ["minor", "patch"],
    },
    // Group all pre-commit hook updates
    {
      groupName: "pre-commit hooks",
      matchManagers: ["pre-commit"],
      matchUpdateTypes: ["minor", "patch"],
    },
    // Group Python dependencies
    {
      groupName: "Python dependencies",
      matchManagers: ["uv"],
      matchUpdateTypes: ["minor", "patch"],
    },
    // Sync ruff versions across pre-commit and pyproject.toml
    {
      groupName: "ruff",
      matchPackageNames: ["ruff", "astral-sh/ruff-pre-commit"],
    },
    // Sync uv versions (setup-uv action, pre-commit, required-version, uv_build)
    {
      groupName: "uv",
      matchPackageNames: [
        "uv",
        "uv_build",
        "astral-sh/uv-pre-commit",
        "astral-sh/setup-uv",
      ],
    },
    // Sync zizmor versions (action, pre-commit hook, and version input)
    {
      groupName: "zizmor",
      matchPackageNames: [
        "zizmor",
        "zizmorcore/zizmor",
        "zizmorcore/zizmor-pre-commit",
        "zizmorcore/zizmor-action",
      ],
    },
    // Sync prek versions (action input and pyproject.toml)
    {
      groupName: "prek",
      matchPackageNames: ["prek", "j178/prek-action"],
    },
    // Labels for different ecosystems
    {
      matchManagers: ["github-actions"],
      addLabels: ["github-actions"],
    },
    {
      matchManagers: ["uv"],
      addLabels: ["python"],
    },
    {
      matchManagers: ["pre-commit"],
      addLabels: ["pre-commit"],
    },
  ],
}
